{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
<div class="row" style="padding-top : 30px;padding-bottom : 100px">
    <div class="col-6 offset-3">
        <div class="card bg-light">
            <div class="card-body">
                {% for flashError in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}
                <h1>Réinitialisez votre mot de passe</h1>

                {{ form_start(requestForm) }}
                    <div>
                        <small>
                            Entrez votre adresse e-mail et nous vous enverrons un lien
                            pour réinitialiser votre mot de passe.
                        </small>
                    </div>
                    {{ form_row(requestForm.email) }}
                    
                    <button class="btn btn-primary">Réinitialiser</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
